<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/search_list_rl"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    >

    <TextView
        android:textColor="#000000"
        android:id="@+id/shop_name_tv"
        android:text="大尺寸液晶电视"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/shop_rl"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <Button
            android:clickable="false"
            android:layout_alignParentBottom="true"
            android:id="@+id/shopbtn"
            android:background="@drawable/shop"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/shop_count"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:text="100000"
            android:layout_toRightOf="@id/shopbtn"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>

        <Button
            android:clickable="false"
            android:background="@drawable/logo_gbh"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:id="@+id/country"
            android:layout_width="40dp"
            android:layout_height="40dp"/>

        <TextView
            android:id="@+id/datetv"
            android:layout_marginRight="15dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/country"
            android:text="16/06/16"
            android:layout_width="wrap_content"
            android:layout_height="20dp"/>
        <Button
            android:clickable="false"
            android:layout_marginRight="5dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/datetv"
            android:background="@drawable/datatime"
            android:layout_width="20dp"
            android:layout_height="20dp"/>
    </RelativeLayout>
    <ImageView
        android:layout_below="@id/shop_rl"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/view_back"/>

</RelativeLayout>