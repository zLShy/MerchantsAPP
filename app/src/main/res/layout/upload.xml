<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="#474443">

        <ImageView
            android:id="@+id/get_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/goback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="公司信息编辑"
            android:textColor="#ffffff"
            android:textSize="20sp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titlebar">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titlebar"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="摊  位  号"

                    android:textColor="#A1A1A1"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/stall"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back"
                    android:gravity="center_vertical"
                    android:text="    1.0.1A"
                    android:textColor="#000000"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公        司"

                    android:textColor="#A1A1A1"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/companyname"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back1"
                    android:gravity="center_vertical"
                    android:hint=" 请填写公司名称"
                    android:textColor="#A1A1A1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/compang_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/company"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司网址"
                    android:textColor="#A1A1A1"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/companyurl"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back1"
                    android:gravity="center_vertical"
                    android:hint=" 公司网址"
                    android:textColor="#A1A1A1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chuanz_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/compang_ll"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="公司传真"
                    android:textColor="#A1A1A1"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/companyfax"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back1"
                    android:gravity="center_vertical"
                    android:hint=" 公司传真"
                    android:textColor="#A1A1A1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shopstyps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/chuanz_ll"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家类别"
                    android:textColor="#A1A1A1"
                    android:textSize="14sp"/>

                <Spinner
                    android:id="@+id/sp_type"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back1"
                    />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/phonetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shopstyps"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系方式"
                    android:textColor="#A1A1A1"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/phone"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back1"
                    android:gravity="center_vertical"
                    android:hint=" 电话"
                    android:maxLength="12"
                    android:textColor="#A1A1A1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/email_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/phonetype"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E-mail     "
                    android:textColor="#A1A1A1"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/email"
                    android:layout_width="180dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back1"
                    android:gravity="center_vertical"
                    android:hint="  Email"
                    android:singleLine="true"
                    android:textColor="#A1A1A1"
                    android:textSize="15sp"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/address_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/email_ll"
                android:layout_marginTop="7dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地        址"
                    android:textColor="#A1A1A1"
                    android:textSize="14sp"
                    />

                <EditText
                    android:id="@+id/addresset"
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/edit_back1"
                    android:gravity="top|left"
                    android:hint=" 地址"
                    android:paddingTop="2dp"
                    android:textColor="#A1A1A1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/company_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/address_ll"
                android:layout_marginTop="7dp"
                android:paddingLeft="30dp"
                android:text="公司商品介绍"
                android:textSize="14sp"/>

            <EditText
                android:paddingLeft="7dp"
                android:id="@+id/company_et"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_below="@id/company_tv"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/edit_back2"
                android:gravity="left|top"
                android:hint="  多行输入"
                android:paddingRight="5dp"
                android:textColor="#A1A1A1"
                android:textSize="15sp"/>

            <LinearLayout
                android:id="@+id/layout_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_et"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:src="@drawable/upimagebtn"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:gravity="center"
                    android:text="   (429*250像素,最大不超过100K)"
                    android:textColor="#000000"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/imageback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_ll"
                android:orientation="horizontal">

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/upiv1"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/upimageiv"/>

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/upiv2"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/upimageiv"/>

                <com.loopj.android.image.SmartImageView
                    android:id="@+id/upiv3"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    android:layout_weight="1"
                    android:src="@drawable/upimageiv"/>
            </LinearLayout>


            <Button
                android:id="@+id/up_submit"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/imageback"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/image_button_back"
                android:gravity="center"
                android:text="提交"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>
